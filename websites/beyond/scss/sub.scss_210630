// 댓글기능
.commentsWrap {
  background-color: #fbfbfb;
  border-top: 2px solid #cccccc;
  border-bottom: 2px solid #cccccc;
  padding: 50px 3%;

  .total {
    font-size: 20px;
    font-weight: 500;
    margin-bottom: 15px;
  }

  .writing {
    background-color: #fff;
    height: 66px;
    border: 1px solid #ddd;
    box-sizing: border-box;
    padding: 0 20px;

    input[type=text] {
      border: none;
      width: calc(100% - 74px);
      height: 100%;
      font-size: 18px;
    }

    .submitWrite {
      width: 74px;
      line-height: 40px;
      text-align: center;
      color: #fff;
      background-color: $mainColor;
      font-size: 20px;
    }
  }

  .commentsLists {
    padding: 40px 0;
    border-bottom: 1px solid #ddd;

    .commented {
      @include layout(".theComments, .inBtns", 30px);
    }

    .theComments {
      width: 75%;

      .writer {
        font-size: 25px;
        font-weight: 500;
        margin-bottom: 0.4em;
      }

      .writered {
        font-size: 16px;
        line-height: 1.4;
        color: #777777;
        margin-bottom: 30px;
      }

      .date {
        font-size: 16px;
        color: #909090;
      }
    }

    .inBtns {
      .thisBtns {
        display: flex;

        li {
          width: 74px;
          height: 40px;
          line-height: 40px;
          background-color: #fff;
          border: 1px solid #ddd;
          border-radius: 5px;
          text-align: center;

          &:first-child {
            margin-right: 10px;
          }

          a {
            display: block;
            font-size: 16px;
            color: #555555;
          }
        }

        .active {
          background-color: $mainColor;

          a {
            color: #fff;
          }
        }
      }

      .goodBad {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        margin-top: 50px;

        li {
          // display: flex;
          // align-items: center;

          img {
            vertical-align: middle;
            margin-right: 5px;
          }

          span {
            font-size: 18px;
            color: #555555;
          }
        }

        .good {
          margin-right: 35px;
        }

        @include mobile {
          margin-top: 0px;

          .good {
            margin-right: 15px;
          }
        }
      }

      @include mobile {
        display: flex;
        justify-content: space-between
      }
    }

    .writing {
      margin-top: 15px;
      display: none;
    }
  }

  .moreComments {
    line-height: 60px;
    border: 1px solid #ddd;
    background-color: #f9f9f9;
    margin-top: 25px;


    a {
      height: 100%;
      font-size: 20px;

      span {
        margin-right: 10px;
      }

      @include flexAlign;
    }
  }
}

// 멤버십 투표
.aboutMembership {
  border-top: 3px solid #000;
  margin: 75px 0;

  .memberTag {
    padding: 60px 4%;
    border-bottom: 1px solid #ddd;

    .tagTitle {
      font-size: 30px;
      font-weight: 500;
      color: $mainColor;
      line-height: 1.3;
      cursor: pointer;
      background: url(../images/sub/vote/closed_col.png) no-repeat center right;

      @include mobile {
        font-size: 23px;
      }
    }


    .opended {}

    .memeberTxts {
      display: none;
      margin-top: 30px;
    }

    .dot {
      font-size: 20px;
      color: #555555;
      line-height: 1.4;
      position: relative;
      padding-left: 15px;

      &::before {
        content: '';
        display: block;
        width: 7px;
        height: 7px;
        border-radius: 100%;
        position: absolute;
        left: 0;
        top: 12px;
        background-color: $mainColor;
      }
    }

    @include mobile {
      padding: 30px 2%;
    }
  }

  .opended {
    .tagTitle {
      background: url(../images/sub/vote/opened_col.png) no-repeat center right;
    }
  }

  @include mobile {
    margin: 50px 0;

  }
}

.voteSubmit {
  margin: 0 auto;
}

// 멤버십 투표 신청
.apply_title {
  padding-bottom: 20px;
  margin: 70px 0 24px 0;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: flex-end;

  .atxt01 {
    font-size: 25px;
    font-weight: 500;
    margin-right: 15px;
  }

  .atxt02 {
    font-size: 15px;
    font-weight: 300;
    color: #555555;
    padding-left: 10px;
    position: relative;

    &:before {
      content: '';
      display: block;
      width: 5px;
      height: 5px;
      border-radius: 100%;
      background-color: #f00f1f;
      position: absolute;
      left: 0;
      top: 5px;
    }


  }
}

.applyTable {
  width: 100%;

  tr {

    th,
    td {
      padding: 5px 0;
    }

    &.topVertical {

      th,
      td {
        vertical-align: top;
      }

      th {
        padding-top: 20px;
      }
    }

    th {
      text-align: left;
      width: 12%;
      box-sizing: border-box;

      &:nth-child(3) {
        padding-left: 25px;

        @include mobile {
          padding-left: 0;
        }
      }

      p {
        position: relative;
        padding-left: 20px;
        font-size: 18px;
        font-weight: 500;

        span {
          display: block;
          font-size: 15px;
          font-weight: 300;
          color: #555555;
          margin-top: 5px;
        }

        &:before {
          content: '';
          display: block;
          width: 5px;
          height: 5px;
          border-radius: 100%;
          background-color: #f00f1f;
          position: absolute;
          left: 0;
          top: 5px;
        }
      }
    }

    td {
      .radioBtns {
        display: flex;
        width: 100%;
        max-width: 330px;

        li {
          width: 50%;
          position: relative;

          input[type="radio"] {
            position: absolute;
            right: 0;
            width: 1px;
            height: 1px;
            padding: 0;
            border: 0 none;
            margin: 0;
            top: 0;
            overflow: hidden;
            clip: rect(0 0 0 0);
          }

          label {
            height: 50px;
            line-height: 50px;
            border: 1px solid #ddd;
            text-align: center;
            color: #555555;
            display: block;
            font-size: 18px;
            cursor: pointer;
          }

          input[type="radio"]:checked+label {
            background-color: $mainColor;
            color: #fff;
          }
        }
      }


      input[type="text"] {
        padding-left: 15px;
        box-sizing: border-box;
        width: 100%;
        height: 50px;
        border: 1px solid #ddd;
        font-size: 17px;
      }

      textarea {
        padding: 10px;
        border: 1px solid #ddd;
        resize: none;
        width: 100%;
        height: 220px;
        font-size: 17px;
      }
    }
  }

  // #radio_yn,
  // #radio_sult {
  //   display: none;
  // }

  @include mobile {
    display: block;

    tbody,
    tr,
    tr th,
    tr td {
      display: block;
      width: 100% !important;
    }

    tr th {
      padding-top: 30px !important;
    }
  }
}

.submitApply {
  margin: 60px auto 0 auto;
  height: 90px;
  line-height: 1;
  // @include flexAlign;

  a {
    // display: block;
    font-size: 26px;
    font-weight: 500;
    height: 100%;
    flex-direction: column;
    padding-top: 15px;
    box-sizing: border-box;
    @include flexAlign;
  }
}