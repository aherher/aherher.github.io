@charset "uft-8";
@import './mixin';

// 서브 공통
.subContents {
  padding: 70px 0 120px 0;

  @include mobile {
    padding: 60px 0 80px 0;
  }
}

.subTabs {
  @include flexAlign;
  padding: 45px 0;

  li {
    position: relative;

    a {
      display: block;
      font-size: 35px;
      font-weight: 700;
      color: #bababa;
      position: relative;
      transition: all 0.5s;

      @include mobile {
        font-size: 25px;
      }

      &:after {
        content: '';
        display: block;
        width: 0;
        height: 0.5em;
        background-color: #bcb0ff;
        bottom: 0;
        z-index: 0;
        transition: all 0.5s;
        @include centerX(absolute);
      }

      span {
        position: relative;
        z-index: 1;
      }
    }

    &.on,
    &:hover {
      a {
        color: #000;

        &:after {
          width: 100%;
        }
      }
    }

    &:not(:last-child) {
      padding-right: 5%;
      margin-right: 5%;

      &:after {
        content: '';
        display: block;
        width: 8px;
        height: 8px;
        background-color: #000;
        border-radius: 100%;
        right: -8px;
        @include centerY(absolute);
      }
    }
  }
}

.endLayer {
  position: absolute;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  z-index: 1;
  background-color: $blkBg;

  .layertxts {
    width: 100%;
    color: #fff;
    @include centerY(absolute);

    .endTxt01 {
      font-size: 25px;
      font-weight: 700;
      margin-bottom: 15px;
    }

    .endTxt02 {
      font-size: 18px;
      margin-bottom: 15px;

      span {
        color: #ffa200;
      }
    }

    .viewVote {
      display: block;
      margin: 0 auto;
      border: 2px solid #fff;
      width: 118px;
      line-height: 48px;
      box-sizing: border-box;
      font-size: 18px;
      transition: all 0.5s;
    }
  }
}

li:hover {
  .viewVote {
    background-color: #fff !important;
    color: #000;
  }
}


// 페이저
.pager_wrap {
  text-align: center;
  margin-top: 50px;

  .pager {
    display: inline-block;
    text-align: center;

    li {
      float: left;
      width: 30px;
      height: 30px;
      line-height: 28px;
      box-sizing: border-box;
      border: 1px solid #ddd;
      border-left: 0;

      &:first-child {
        border-left: 1px solid #ddd;
      }

      a {
        display: block;
        font-size: 18px;
        font-weight: 500;
        width: 100%;
        height: 100%;
        line-height: 28px;
        box-sizing: border-box;

        &:hover {
          border-bottom: 2px solid #000000;
        }
      }
    }

    .pagerarr {
      line-height: 34px;

      img {
        vertical-align: middle;
      }
    }
  }
}

// 투표상세페이지
.viewHead {
  margin-bottom: 55px;

  .voteTitle {
    font-size: 35px;
    font-weight: 500;
    line-height: 1.3;
    margin-bottom: 0.4em;

    @include mobile {
      font-size: 24px;
    }
  }

  .votedWrap {
    .voteInfo {
      .issueDate {
        font-size: 20px;
        padding-right: 20px;
        margin-right: 20px;
        position: relative;

        &:after {
          content: '';
          display: black;
          width: 1px;
          height: 20px;
          background-color: #ddd;
          position: absolute;
          right: 0;
          top: 0;
        }
      }

      .voteNubmer {
        font-size: 20px;
        font-weight: 500;
        color: #4b3e96;
      }

      @include mobile {

        .issueDate,
        .voteNubmer {
          font-size: 15px !important;
          display: block;
        }

        .issueDate {
          margin: 0 0 10px 0;
          padding-right: 0;
        }
      }
    }

    .snsLinks {
      display: flex;

      li {
        width: 32px;

        &:not(:last-child) {
          margin-right: 10px;
        }
      }
    }

    @include layout(".voteInfo, .snsLinks", 20px);
  }

  @include mobile {
    margin-bottom: 30px;
  }
}

.voteArticle {
  font-size: 17px;
  line-height: 1.5;
  color: #555555;
  padding-bottom: 70px;
  margin-bottom: 70px;
  border-bottom: 2px solid #ddd;

  .linker {
    color: #7c2bc9;
    word-break: break-all;
  }
}

.aboutVote {
  font-size: 30px;
  margin-bottom: 1em;

  dt {
    font-size: 1em;
    margin-bottom: 0.7em;
    line-height: 1.3;
  }

  dd {
    font-size: 0.6em;
    color: #555555;
    line-height: 1.4;
  }

  @include mobile {
    font-size: 24px;
  }
}

.frmSelect_wrap {
  position: relative;
  padding: 60px 5%;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;

  .endlayer {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: $blkBg;
    top: 0;
    left: 0;
    z-index: 1;

    p {
      width: 95%;
      text-align: center;
      color: #fff;
      font-size: 30px;
      @include centerC(absolute);

      @include mobile {
        font-size: 18px;
      }
    }
  }

  @include mobile {
    padding: 30px 0;
  }
}

.voteFrm {

  .selectVote {

    li {
      position: relative;

      &:not(:last-child) {
        margin-bottom: 50px;
      }

      input[type="radio"] {
        position: absolute;
        right: 0;
        width: 1px;
        height: 1px;
        padding: 0;
        border: 0 none;
        margin: 0;
        top: 0;
        overflow: hidden;
        clip: rect(0 0 0 0);
      }

      label {
        background: url(../images/sub/vote/uncheck.png) no-repeat center left;
        background-size: 80px auto;
        padding: 7px 0 7px 95px;
        font-size: 20px;
        line-height: 1.3;
        color: #555555;
        cursor: pointer;
        display: block;
      }

      input[type="radio"]:checked+label {
        background: url(../images/sub/vote/checked.png) no-repeat center left;
        background-size: 80px auto;
      }

    }

    @include mobile {

      li:not(:last-child) {
        margin-bottom: 20px;
      }
    }
  }

  .yesOrnot {
    li {
      width: 50%;
      box-sizing: border-box;
      position: relative;

      &:first-child {
        padding-right: 4%;
        margin-right: 4%;

        &:after {
          content: '';
          display: block;
          width: 1px;
          height: 90%;
          background-color: #ddd;
          right: 0;
          @include centerY(absolute);
        }

        @include tablet {
          padding-right: 2%;
          margin-right: 2%;
        }
      }

      .chooseIcone {
        @include tablet {
          width: 50px;
          text-align: center;
        }
      }

      .yn_btn {
        max-width: 325px;
        width: calc(100% - 150px);

        input[type="radio"] {
          position: absolute;
          right: 0;
          width: 1px;
          height: 1px;
          padding: 0;
          border: 0 none;
          margin: 0;
          top: 0;
          overflow: hidden;
          clip: rect(0 0 0 0);
        }

        label {
          width: 100%;
          height: 64px;
          cursor: pointer;
          display: block;
          text-indent: -99999px;
          font-size: 0;
        }

        .theYes {
          background: url(../images/sub/vote/yes_label.png) no-repeat center;
          background-size: 100% auto;
        }

        .theNo {
          background: url(../images/sub/vote/no_label.png) no-repeat center;
          background-size: 100% auto;
        }

        input[type="radio"]:checked+.theYes {
          background: url(../images/sub/vote/yes_label_on.png) no-repeat center;
          background-size: 100% auto;
        }

        input[type="radio"]:checked+.theNo {
          background: url(../images/sub/vote/no_label_on.png) no-repeat center;
          background-size: 100% auto;
        }

        @include tablet {
          width: calc(100% - 60px);
        }
      }

      @include layout(".chooseIcone, .yn_btn", 0);
    }

    .liNo {
      @include mobile {
        flex-direction: column-reverse;
      }
    }
  }

  .voteBtns {
    margin: 60px 0;

    li {
      width: 49%;
      line-height: 70px;
      border-radius: 10px;
      text-align: center;
      box-sizing: border-box;

      a {
        display: block;
        font-size: 27px;
        font-weight: 700;
      }
    }

    .doVote {
      background-color: $mainColor;

      a {
        color: #fff;
      }
    }

    .viewPop {
      border: 2px solid $mainColor;

      a {
        color: $mainColor;
      }
    }
  }

  .endbtns {
    li {
      width: 100%;
    }
  }
}

